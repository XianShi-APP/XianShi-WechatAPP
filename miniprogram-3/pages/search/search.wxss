/* pages/search/search.wxss */
Page{
    background-color: rgb(255, 255, 255);
}
.search {
    margin: 10rpx;
    height: 60rpx;
    display: flex;
}
.search input{
    flex:9;
    height: 100%;
    background-color: white;
}
.search button{
    padding: 0;
    margin: 5rpx;
    flex: 1;
    font-size: 28rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.check{
    margin: 10rpx;
}

.item{
    display: flex;
    height: 20vh;
    border-bottom: 1rpx solid black;
  }
  .img_wrap{
    height: 20vh;
    flex:2;
    overflow: hidden;
    justify-content: center;
    align-items: center;
    /* background-color: aqua; */
  }
  image{
    width: 100%;
    
  }
  .info_wrap{
    height: 20vh;
    flex:3;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    overflow: hidden;
    /* background-color: red; */
  }
  .info_name{
    color: var(--themeColor);
    font-size: 32rpx;
    text-align: center;
    /* 按box布局 超出部分隐藏 */
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    /* 超出一行的文字用...代替 */
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
  }
  .info_desc{
    /* 按box布局 超出部分隐藏  */
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    /* 超出两行的文字用...代替 */
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }
  .info_price{
    color: red;
  }
  
  .clearHistoryBtn {
    display: flex;
    justify-content: center;
  }
  
  .clearHistoryBtn icon {
    margin-right:5rpx; 
  }
  
  .clearHistoryBtn-grid1 {
    padding: 20rpx;
    padding-right: 40rpx;
    padding-left: 40rpx;
  }